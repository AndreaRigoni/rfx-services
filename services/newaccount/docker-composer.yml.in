# created $(date)
version: "3"
services:
  newaccount:
    hostname: localhost
    image: consorziorfx/php-ldap:latest
    ports:
      - 80
    labels:
       - "reroute.ip=$(REROUTE_IP)"
       - "reroute.ports=$(REROUTE_PORTS)"
    volumes:
       - "${SERVICE_DIR}/newaccount:/var/www/html"
#       - "$(SERVICE_DIR)/tmp:/tmp"
    deploy:
      replicas: 1
      placement:
        constraints:
         - node.role == manager
         - node.hostname == $(HOSTNAME)



