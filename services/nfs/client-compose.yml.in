# created $(date)
version: "3"
services:
  nfs:
    image: 'janeczku/nfs-ganesha:latest'
    # ports:
    environment:
      SERVER: nfs
      SHARE: 
    volumes:
      - nfs-data:/data/nfs
    networks:
      - rfx-service
    deploy:
      replicas: 1
      placement:
        constraints:
         - node.role == manager
         - node.hostname == $(HOSTNAME)

volumes:
  nfs-data:

networks:
  rfx-service:
    driver: overlay


